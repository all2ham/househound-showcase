<h2 class="text-center">Forgot your password?</h2>

<div class="small-10 medium-6 large-4 small-centered columns">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, :required => true, :autofocus => true, wrapper: :inline_input %>
      </div>

      <div class="form-actions small-12 small-centered columns">
        <%= f.button :submit, "Send me reset password instructions", class: 'expand radius' %>
      </div>
  <% end %>

</div>


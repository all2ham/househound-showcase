
<div class="row">


  <div class="small-centered">
    <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), wrapper: :prefix_input_homepage_register do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, :autofocus => true %>
          <%= f.input :password %>
        </div>

        <div class="form-actions small-12 small-centered columns">
          <%= f.button :submit, "Sign up", class: 'expand radius' %>
        </div>
    <% end %>

    <%= render "devise/shared/password" %>

  </div>
</div>

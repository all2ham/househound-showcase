<%= render partial: 'layouts/pagetitle', :locals => {:titlestring=>"Register"} %>

<div class="row">


<div class="small-10 medium-6 large-4 small-centered columns">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), wrapper: :prefix_input do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :access_code_id, as: :hidden, input_html: { value: session[:access_code] } %>
      <%= f.input :email, :autofocus => true %>
      <%= f.input :password %>
    </div>

    <div class="form-actions small-12 small-centered columns">
      <%= f.button :submit, "Sign up", class: 'expand radius' %>
    </div>
  <% end %>

  <%= render "devise/shared/password" %>

</div>
</div>

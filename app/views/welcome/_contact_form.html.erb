<%= form_tag '/contact', method: :post do %>
  <%= label_tag :name%>
  <%= text_field_tag :name %>

  <%= label_tag :subject %>
  <%= text_field_tag :subject %>

  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= label_tag :message %>
  <%= text_area_tag :message %>

  <%= submit_tag 'Submit', class: 'button expand' %>
<% end %>